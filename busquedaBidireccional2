def construirArbolI_F(matriz):
    """Retorna el arbol construido de I a F listo para ser evaluado en busqueda"""
    for i in range(len(matriz)):
        for j in range(len(matriz[i])):
            if matriz[i][j] == "I":
                incio= i,j
                print(incio)

        



construirArbolI_F(nivel1)

